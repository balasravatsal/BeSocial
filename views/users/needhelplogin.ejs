<% layout('layouts/boilerplate')%>
<h1>Login for help</h1>
<form action="/needhelplogin" method="POST" class="validated-form" novalidate>
    <div class="mb-3">
        <label class="form-label" for="needyUsername">Username</label>
        <input class="form-control" type="text" id="needyUsername" name="needyUsername" required>
        <div class="valid-feedback">
            Looks good!
        </div>
    </div>

    <div class="mb-3">
        <label class="form-label" for="password">Password</label>
        <input class="form-control" type="password" id="password" name="password" required>
        <div class="valid-feedback">
            Looks good!
        </div>
    </div>
    <button class="btn btn-success">Login</button>
</form>
