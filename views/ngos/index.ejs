<% layout('layouts/boilerplate') %>

<h1>All the NGOs</h1>
<div>
    <a href="/ngos/new">Add New NGO</a>
</div>
<% for(let ngo of ngos) { %>
    <div class="card" style="flex-direction: row-reverse;" mb-3>
        <div class="row">
            <img class="img-fluid" src="https://source.unsplash.com/random/?city,night" alt="NGO img">
<!--TODO: add urls to database | 436-->
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title"><%= ngo.title %></h5>
                <p class="card-text"><%= ngo.description %></p>
                <p class="card-text">
                    <small class="text-muted"><%= ngo.location %></small>
                </p>
                <a class="btn btn-primary" href="/ngos/<%= ngo.id %>">View Details</a>
            </div>
        </div>
    </div>
<% } %>



